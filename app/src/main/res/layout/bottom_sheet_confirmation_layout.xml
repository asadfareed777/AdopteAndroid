<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp"
    android:background="@drawable/db_rounded_bottom_sheet_white">

    <View
        style="@style/dividerLeftDrawable"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_5sdp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/_5sdp"
        />

    <TextView
        android:id="@+id/tvBsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_margin="@dimen/_5sdp"
        style="@style/labelDesign"
        android:textSize="@dimen/_15ssp"
        />



    <TextView
        android:id="@+id/tvBsMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:text="Are you sure you want to logout ?"
        android:gravity="center_horizontal"
        style="@style/labelDesign"
        android:textSize="@dimen/_13ssp"/>

    <LinearLayout
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvBottomSheetNo"
            android:text="No"
            style="@style/buttonDesignOutline"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"  />


        <TextView
            android:id="@+id/tvBottomSheetYes"
            style="@style/buttonDesign"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:text="Yes"  />

    </LinearLayout>

</LinearLayout>