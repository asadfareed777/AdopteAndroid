<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:background="@color/bg_dialog"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_centerInParent="true"
            android:elevation="@dimen/_5sdp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@color/white"
            android:layout_margin="@dimen/_20sdp"
            android:padding="@dimen/_15sdp"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvTitle"
                style="@style/boldHeading"
                android:text="@string/text_accept_order"
                />
            <TextView
                android:id="@+id/tvDetail"
                style="@style/subHeading"
                android:gravity="center_vertical"
                android:text="@string/text_accept_order_detail"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/tvCancel"
                    style="@style/buttonDesignOutline"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:textSize="@dimen/_11ssp"
                    android:layout_weight="0.7"
                    android:text="@string/text_cancel" />


                <TextView
                    android:id="@+id/tvLessMyAccount"
                    style="@style/buttonDesign"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:textSize="@dimen/_11ssp"
                    android:layout_weight="1.3"
                    android:text="@string/text_less_my_account" />

            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>
</layout>