<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/appColor</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
         >

<!--        <item name="radioButtonStyle">@style/RadioButtonStyle</item>-->
    </style>

    <style name="RadioButtonStyle" parent="Theme.MyApp">
        <item name="colorControlNormal">@color/appColor</item>
        <item name="colorAccent">@color/appColor</item>
        <item name="android:textColorSecondary">@color/black</item>
    </style>

    <style name="SCBSwitch" parent="Theme.MyApp">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/appColor</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>
    <style name="TextHintLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColorHint">@color/hintColor</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/db_rounded_bottom_sheet_white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/whiteShade</item>
        <item name="colorPrimaryDark">@color/whiteShade</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBarOverlay">false</item>
        <item name="android:actionMenuTextColor">@color/textMenu</item>
    </style>

    <style name="MyActionButtonStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:minWidth">20dip</item>
        <item name="android:itemPadding">5dp</item>
    </style>

    <style name="NavDrawerTextStyle">
        <item name="android:paddingStart">410dp</item>
    </style>



</resources>